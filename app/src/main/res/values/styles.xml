<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="android:textColor">#DDD417</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">#646833</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>

    </style>

    <style name="Button">
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">167dp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>
    <style name="text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1FC221</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#1F30C2</item>
        <item name="android:paddingBottom">100dp</item>

    </style>
    <style name="text1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#35322A</item>
        <item name="android:background">#D83F27</item>

    </style>
    <style name="text3">
        <item name="android:background">#1A0502</item>
        <item name="android:textColor">#ECF9F9</item>
        <item name="android:textColor">#B06955</item>
    </style>


    <style name="text2">
        <item name="android:gravity">left</item>
        <item name="android:textColor">#57D827</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background"#D84227</item>
    </style>
</resources>
